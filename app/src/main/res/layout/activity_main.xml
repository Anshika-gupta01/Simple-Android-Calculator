<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_primary_dark"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button5"
        android:layout_width="324dp"
        android:layout_height="64dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/system_accent1_300"
        android:text="My Calculator" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Enter 1st number"
        android:inputType="number"
        android:textColorHint="@color/material_dynamic_primary60" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Enter 2nd number"
        android:inputType="number"
        android:textColorHint="@color/material_dynamic_primary60" />

    <Button
        android:id="@+id/add"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:text="Addition"
        android:textSize="18sp"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:text="Subtraction"
        android:textSize="18sp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:text="multiplication"
        android:textSize="18sp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:text="Division"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:text="TextView" />

</LinearLayout>